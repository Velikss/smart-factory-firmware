{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", 
                "-o", 
                "bin/main", 
                "src/main.cpp",
                "-I",
                "${workspaceFolder}/include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}